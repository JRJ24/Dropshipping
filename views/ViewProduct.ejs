<%- include('layouts/header') %>
  <div class="container">
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped text-center">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Price</th>
                                <th scope="col">Photo</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((products, viewProduct) => { %>
                                <tr class="align-middle">
                                    <td><%= ++viewProduct %></td>
                                    <td><%= products.name %></td>
                                    <td><%= products.description %></td>
                                    <td><%= products.stock %></td>
                                    <td><%= products.price %></td>
                                    <td><img src="/upload/<%= products.image %>" width="50" class="img-thumbnail"></td>
                                    <td>
                                        <a href="/edit/<%= products._id%>" class="fa fa-edit fa-lg"></a>
                                        <a href="/delete/<%= products._id%>" class="fa fa-trash fa-lg"></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<%- include('layouts/footer') %>
