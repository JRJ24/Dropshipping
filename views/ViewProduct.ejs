<%- include('layouts/header') %>
  <div class="container">
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped text-center">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Email</th>
                                <th scope="col">Tel√©fono</th>
                                <th scope="col">Foto</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((users, viewUser) => { %>
                                <tr class="align-middle">
                                    <td><%= ++viewUser %></td>
                                    <td><%= users.name %></td>
                                    <td><%= users.email %></td>
                                    <td><%= users.phone %></td>
                                    <td>
                                        <img src="/upload/<%= users.photo %>" width="50" class="img-thumbnail">
                                    </td>
                                    <td>
                                        <a href="/edit/<%= users._id%>" class="fa fa-edit fa-lg"></a>
                                        <a href="/delete/<%= users._id%>" class="fa fa-trash fa-lg"></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<%- include('layouts/footer') %>
