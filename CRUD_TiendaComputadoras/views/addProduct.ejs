<%- include('layouts/header') %>
<div class="container px-5 my-5">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Agregar Producto</h1>
      <form id="add-form" action="/add" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="codigo">Codigo</label>
          <input class="form-control" id="codigo" name="codigo" type="text" placeholder="Codigo del Producto" required />
        </div>

        <div class="mb-3">
          <label class="form-label" for="nombreProducto">Nombre del Articulo</label>
          <input class="form-control" id="nombreProducto" name="nombreProducto" type="email" placeholder="Nombre del Producto" required />
        </div>

        <div class="mb-3">
          <label class="form-label" for="phone">Descripcion</label>
          <input class="form-control" id="phone" name="phone" type="text" placeholder="Descripcion del producto" required />
        </div>

        <div class="mb-3">
          <label class="form-label" for="cantidad">Cantidad</label>
          <input class="form-control" id="cantidad" name="cantidad" type="text" placeholder="Cantidad disponible del producto" required />
        </div>

        <div class="mb-3">
          <label for="foto" class="form-label">Foto de Articulo</label>
          <input name="foto" class="form-control" type="file" required />
        </div>

        <div class="d-grid">
          <input type="submit" class="btn btn-primary btn-lg" value="Add User">
        </div>
      </form>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>


<%- include('layouts/footer') %>