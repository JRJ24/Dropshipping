<%- include('layouts/header') %>


    <div class="container px-5 my-5">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>Editando Producto</h1>
                <form id="add-form" action="/products/edit/<%= products._id%>" method="post" enctype="multipart/form-data">
                    <div class="mb3">
                        <label for="name" class="form-label">Nombre: </label>
                        <input type="text" class="form-control" value="<%= products.name %>" id="name" name="name" placeholder="Enter your name" required />
                    </div>
                    <div class="mb3">
                        <label for="description" class="form-label">Descripcion: </label>
                        <input type="description" class="form-control" id="description" value="<%= products.description %>" name="description" placeholder="Enter your the description" required />
                    </div>
                    <div class="mb3">
                        <label for="stock" class="form-label">Stock: </label>
                        <input type="stock" class="form-control" id="stock" value="<%= products.stock %>" name="stock" placeholder="Enter your stock" required />
                    </div>
                    <div class="mb3">
                        <label for="price" class="form-label">Precio: </label>
                        <input type="text" class="form-control" id="price" value="<%= products.price %>" name="price" placeholder="Enter your price" required />
                    </div>
                    <div class="mb3">
                        <label for="photo" class="form-label">Imagen: </label>
                        <input type="file" class="form-control" id="image"  name="image" accept="image/*" />
                        <img src="/upload/<%= products.image %>" width="100" class="img-thumbnail mt-1">
                    </div>

                    <input type="hidden" name="old_image" value="<%= products.image %>">

                    <div class="mb3">
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                        <a href="/products/ViewProduct" class="btn btn-secondary mt-3">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>


<%- include('layouts/footer') %>
